<include file="Public/Admin/tpl/header.html" />
<div class="smalldiv">
<button type="button" class="btn btn-green" data-toggle="dialog" data-url="<!--{:U('User/AddShow','',false)}-->"data-options="{id:'ArticleAdd',title:'添加新用户'}">添加新用户</button>
</div>

		<form action="<!--{:U('User/DoSearch','',false)}-->" data-toggle="validate">
		 <table class='table table-bordered table-striped table-hover' style="margin:20px 0;">
			 <tbody>
				 <tr>
					<td>用户名称：</td>
					<td><input class="form-control" name="username" data-rule="用户名称:length[1~];" placeholder="用户名称" type="text" value="<!--{$Think.session.condition_user.condition_username}-->"></td>
				</tr>
				<tr>
					<td colspan=2>
					<a type="button" class="btn btn-orange" href="<!--{:U('User/Doclear','',false)}-->" data-toggle="doajax" data-id="UserConditionClear" style="float:right;">清空查询</a>
					<button class="btn btn-orange" type="submit" style="float:right;" >搜索</button>
					</td>
				</tr>
			</tbody>
		</table>
		</form>


		<table class="table table-bordered table-striped table-hover">
		<thead>
		<tr>
			<th data-order-field="user_id" >序号</th>
			<th>分组</th>
			<th>用户名</th>
			<th>创建时间</th>
			<th colspan=2>操作</th>
		</tr>
		</thead>
		<tbody>
		<!--{<foreach name="userlist['UserList']" item="vo">}-->
		<tr>
			<td><!--{$vo.user_id}--></td>
			<td><!--{$vo.usercate_names}--></td>
			<td><!--{$vo.user_account}--></td>
			<td><!--{$vo.create_time}--></td>
			<td colspan=2>
				<button type="button" class="btn btn-blue" data-toggle="dialog" data-id="UserUpdate" data-url="<!--{:U('User/UpdateShow','',false)}-->/id/<!--{$vo.user_id}-->" data-title="编辑" >编辑</button>
				<a type="button" class="btn btn-red" href="<!--{:U('User/DoDelete','',false)}-->/id/<!--{$vo.user_id}-->" data-toggle="doajax" data-confirm-msg="您确定要删除此条文章数据吗？" data-id="ArticleDelete">删除</a>
			</td>
		</tr>
		<!--{</foreach>}-->
		<tbody>
		</table>

		<!--分页-->
		<div class="bjui-pageFooter" style="background:#fff;bottom:auto;position:static;margin:10px 0;height:40px;padding-top:5px;padding-left:20%;">
				<div class="pages">
					<span>每页&nbsp;</span>
					<div class="selectPagesize">
						<select data-toggle="selectpicker" data-toggle-change="changepagesize">
							<option value="1">1</option>
							<option value="5">5</option>
							<option value="10">10</option>
							<option value="20">20</option>
							<option value="30">30</option>
							<option value="50">50</option>
							<option value="100">100</option>
						</select>
					</div>
					<span>&nbsp;条，共 <!--{$userlist['Page']['total']}--> 条</span>
				</div>
				<div class="pagination-box pull-left" data-toggle="pagination" data-total="<!--{$userlist['Page']['total']}-->" data-page-size="<!--{$userlist['Page']['size']}-->" data-page-current="<!--{$userlist['Page']['current']}-->"></div>
		</div>


		<!--排序 分页-->
		<form  id="pagerForm" action="<!--{:U('User/DoOrder','',false)}-->" >
			<input type="hidden" name="pageSize" value="<!--{$userlist['Page']['size']}-->"><!-- 页大小 -->
			<input type="hidden" name="pageCurrent" value="<!--{$userlist['Page']['current']}-->"><!-- 当前页 -->
			<input type="hidden" name="orderField" value="<!--{:I('session.User_orderField','user_id')}-->"><!-- 排序字段 -->
			<input type="hidden" name="orderDirection" value="<!--{:I('session.User_orderDirection','desc')}-->"> <!-- 排序方向 -->
		</form>



<include file="Public/Admin/tpl/footer.html" />